subdir="$(readlink -f "$0").sub"

fields="project:,user:,lfs-prefix:"

hierarchical=  # Not implemented at present
lfs_prefix=/lfs01/workdirs

usage () {
  >&2 echo "Usage: $0 --project= --user= [--lfs-prefix=]"
}

if ! opts=`getopt -q -o "" -l "help,$fields" -- "$@"`; then
  usage
  exit 1
fi

eval set -- "$opts"

while true; do
  case "$1" in
    --project)
      project="$2"
      shift
      ;;
    --user)
      user="$2"
      shift
      ;;
    --lfs-prefix)
      lfs_prefix="$2"
      shift
      ;;
    --help)
      usage
      exit 0
      ;;
    --)
      shift
      break
      ;;
  esac
  shift
done

if [ $# -ne 0 ] || \
  [ -z "$project" ] || \
  [ -z "$user" ]; then
  usage
  exit 1
fi

. "$subdir/slurm.sh"
. "$subdir/lfs.sh"
. "$subdir/unix.sh"

rocks sync users
